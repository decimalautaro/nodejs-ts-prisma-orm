{
  "compilerOptions": {

    "incremental": true,
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,                           

    "forceConsistentCasingInFileNames": true,          

    "strict": true,
    "noImplicitAny": true, 

    "skipLibCheck": true 
  },
  "ts-node": {
    "transpileOnly": false
  },
  "include": [
    "src/**/*.ts",
    "src/index.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}